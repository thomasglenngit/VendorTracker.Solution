<h1>Add a new order to @Model.VendorName's collection.</h1>

<form action="/vendors/@Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
  <label for="bread">Bread Order</label>
  <input id="bread" name="bread" type="text">
  <label for="pastry">Pastry Order</label>
  <input id="pastry" name="pastry" type="text">
  <button type='submit'>Add Order</button>
</form>