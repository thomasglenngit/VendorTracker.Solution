@{
  Layout = "_Layout";
}


@using VendorTracker.Models;

<h1>Vendor</h1>

@if (Model.Count == 0)
{
  <p>There are no orders in the list.</p>
}
<ul>
  @foreach (Order order in Model)
  {
    <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title @order.Description @order.Date @order.Bread @order.Pastry </a></li>
  }
</ul>
<a href="/vendors/{vendorId}/orders/new">Add a new order.</a>

<form action="/orders/delete" method="post">
  <button type="submit" name="button">Clear All Orders</button>
</form>