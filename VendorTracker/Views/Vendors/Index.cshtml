@using VendorTracker.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.Name @vendor.Description</a></h3>
  
}

<p><a href='/vendors/new'>Add a new Vendor</a></p>
<p><a href='/'>Back home</a></p>

